# This sentinel.conf file is generated by Chef <%= Time.now %>

daemonize yes
pidfile /var/run/redis/sentinel.pid

port 26379

protected-mode no

sentinel monitor <%= node["redis-sentinel"]["master_name"] %> <%= node["redis-sentinel"]["master_ip"] %> <%= node["redis-sentinel"]["master_port"] %> <%= node["redis-sentinel"]["quorum"] %>
sentinel down-after-milliseconds <%= node["redis-sentinel"]["master_name"] %> <%= node["redis-sentinel"]["down_after_milliseconds"] %>
sentinel failover-timeout <%= node["redis-sentinel"]["master_name"] %> <%= node["redis-sentinel"]["failover_timeout"] %>
